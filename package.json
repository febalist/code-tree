{
  "name": "@febalist/code-tree",
  "version": "1.0.0",
  "description": "A CLI tool and MCP server for quickly exploring project structure and codebase",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "code-tree": "src/index.ts",
    "code-tree-mcp": "src/mcp.ts"
  },
  "files": [
    "src",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__"
  ],
  "engines": {
    "bun": ">=1"
  },
  "keywords": [
    "cli",
    "tree",
    "code",
    "ast",
    "parser",
    "tree-sitter",
    "mcp",
    "symbol",
    "extraction",
    "codebase"
  ],
  "author": "febalist",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/febalist/code-tree.git"
  },
  "homepage": "https://github.com/febalist/code-tree#readme",
  "bugs": {
    "url": "https://github.com/febalist/code-tree/issues"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "mcp": "bun run src/mcp.ts",
    "build": "bun build src/index.ts --compile --outfile code-tree",
    "test": "bun test",
    "format": "biome check --write",
    "check": "biome check && tsc --noEmit",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "citty": "^0.2.0",
    "ignore": "^7.0.5",
    "tree-sitter-wasms": "^0.1.11",
    "web-tree-sitter": "~0.25.10",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "^1.1.16",
    "lefthook": "^1.11.6"
  }
}
